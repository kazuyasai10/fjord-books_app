<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= link_to t('views.common.show'), company %></td>
        <td><%= link_to t('views.common.edit'), edit_company_path(company) %></td>
        <td><%= link_to t('views.common.destroy'), company, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1><%= Company.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Company.human_attribute_name(:id) %></th>
      <th><%= Company.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= link_to t('views.common.show'), admin_companies_path %></td>
        <td><%= link_to t('views.common.edit'), edit_admin_company_path(company) %></td>
        <td><%= link_to t('views.common.destroy'), admin_company_path(company), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

